                        </Core:EventTriggerBehavior>
                    </Interactivity:Interaction.Behaviors>
                </TextBox>
            </StackPanel>
            <ListView Margin="5,5,5,5"
                      Grid.Row="1"
                          x:Name="CreaturesListView"
                          ItemsSource="{x:Bind ViewModel.Creatures, Mode=OneWay}"
                          HorizontalContentAlignment="Stretch"
