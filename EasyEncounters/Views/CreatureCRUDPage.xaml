<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="EasyEncounters.Views.CreatureCRUDPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EasyEncounters.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity" 
    xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal"
                    Grid.Row="0">
                <TextBox x:Name="FilterByName"
                            PlaceholderText="Filter/Search"
                            MinWidth="200"
                            Margin="2,10,2,2">
                    <Interactivity:Interaction.Behaviors>
                        <Core:EventTriggerBehavior EventName="TextChanged">
                            <Core:InvokeCommandAction Command="{x:Bind ViewModel.FilterCommand}" CommandParameter="{x:Bind FilterByName.Text, Mode=OneWay}" />
                        </Core:EventTriggerBehavior>
                    </Interactivity:Interaction.Behaviors>
                </TextBox>
            </StackPanel>
            <ListView Margin="5,5,5,5"
                      Grid.Row="1"
                          x:Name="CreaturesListView"
                          ItemsSource="{x:Bind ViewModel.Creatures, Mode=OneWay}"
                          HorizontalContentAlignment="Stretch"
                          VerticalContentAlignment="Stretch">
                <Interactivity:Interaction.Behaviors>
                    <Core:EventTriggerBehavior EventName="DoubleTapped">
                        <Core:InvokeCommandAction Command="{x:Bind ViewModel.EditCreatureCommand}" CommandParameter="{x:Bind CreaturesListView.SelectedItem, Mode=OneWay}"/>
                    </Core:EventTriggerBehavior>
                </Interactivity:Interaction.Behaviors>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch"
                                        Margin="5,5,5,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="4*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ContextFlyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem Text="Edit" Command="{Binding RequestEditCreatureCommand}"/>
                                    <MenuFlyoutItem Text="Copy" Command="{Binding RequestCopyCreatureCommand}"/>
                                    <MenuFlyoutItem Text="Delete" Command="{Binding RequestDeleteCreatureCommand}"/>
                                </MenuFlyout>
                            </Grid.ContextFlyout>
                            <TextBlock Text="{Binding Creature.Name}"
                                           MinWidth="100"
                                           Margin="5,5,5,5"
                                           Grid.Column="0"
                                           Grid.Row="0"
                                           Grid.RowSpan="2"
                                           FontSize="18"
                                           VerticalAlignment="Center"></TextBlock>

                            <TextBlock Text="Level/CR" FontSize="8" Margin="5,5,5,5"
                                            HorizontalAlignment="Center"
                                           Grid.Column="1"
                                           Grid.Row="0"/>
                            <TextBlock Text="{Binding Creature.LevelOrCR}" Margin="5,5,5,5" 
                                           HorizontalAlignment="Center"
                                           Grid.Column="1"
                                           Grid.Row="1"/>
                            <TextBlock Text="Description" 
                                           Margin="5,5,5,5" 
                                           FontSize="8"
                                           Grid.Row="0"
                                           Grid.Column="2"/>
                            <TextBlock Text="{Binding Creature.Description}" 
                                           Margin="5,5,5,5"
                                           Grid.Row="1"
                                           Grid.Column="2"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        <Button Command="{x:Bind ViewModel.AddNewCreatureCommand}"
                Grid.Row="2"
                    VerticalAlignment="Bottom" 
                    Margin="5,5,5,5"
                    KeyboardAcceleratorPlacementMode="Auto"
                    ToolTipService.ToolTip="Add a new creature">
            <Button.KeyboardAccelerators>
                <KeyboardAccelerator Modifiers="Control" Key="N"/>
            </Button.KeyboardAccelerators>
            <FontIcon Glyph="&#xF8AA;"></FontIcon>
        </Button>
    </Grid>
</Page>
