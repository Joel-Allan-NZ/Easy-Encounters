<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="EasyEncounters.Views.PartyCRUDPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity" 
    xmlns:usercontrols="using:EasyEncounters.Views.UserControls"
    xmlns:userFilters="using:EasyEncounters.Views.UserControls.Filters"
    xmlns:userGrids="using:EasyEncounters.Views.UserControls.DataGrids"
    mc:Ignorable="d"
    xmlns:behaviors="using:EasyEncounters.Behaviors"
    behaviors:NavigationViewHeaderBehavior.HeaderMode="Minimal"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <usercontrols:PaginatedDataGridWithFilters TitleText="Manage Parties"
                                                   GridFilteredValues="{x:Bind ViewModel.PartyFilterValues}"
                                                   AddNewItemCommand="{x:Bind ViewModel.AddPartyCommand}"
                                                   Grid.Row="1"
                                                   >
            <usercontrols:PaginatedDataGridWithFilters.FiltersControl>
                <StackPanel></StackPanel> <!--Currently no party filters implemented or required-->
            </usercontrols:PaginatedDataGridWithFilters.FiltersControl>
            <usercontrols:PaginatedDataGridWithFilters.DataGridControl>
                <userGrids:PartyDataGrid SelectPartyCommand="{x:Bind ViewModel.EditPartyCommand}"
                                             CopyPartyCommand="{x:Bind ViewModel.CopyPartyCommand}"
                                             DeletePartyCommand="{x:Bind ViewModel.DeletePartyCommand}"
                                             SortCommand="{x:Bind ViewModel.PartyFilterValues.DataGridSortCommand, Mode=OneWay}"
                                             DataGridSource="{x:Bind ViewModel.PartyFilterValues.Data, Mode=OneWay}"
                                             EditPartyCommand="{x:Bind ViewModel.EditPartyCommand}"/>
            </usercontrols:PaginatedDataGridWithFilters.DataGridControl>
        </usercontrols:PaginatedDataGridWithFilters>
        <!--<usercontrols:PartyGrid AddNewPartyCommand="{x:Bind ViewModel.AddNewPartyCommand}"
                                CopyPartyCommand="{x:Bind ViewModel.CopyPartyCommand}"
                                DataGridSource="{x:Bind ViewModel.Parties}"
                                DeletePartyCommand="{x:Bind ViewModel.DeletePartyCommand}"
                                EditPartyCommand="{x:Bind ViewModel.EditPartyCommand}"
                                SelectPartyCommand="{x:Bind ViewModel.EditPartyCommand}"
                                SearchTextChangeCommand="{x:Bind ViewModel.SearchTextChangeCommand}"
                                SortCommand="{x:Bind ViewModel.DataGridSortCommand}"
                                Suggestions="{x:Bind ViewModel.PartyFilterValues.SearchSuggestions, Mode=OneWay}"
                                    TitleText="Manage Parties"
                                    Grid.Row="1"
                                />-->

    </Grid>
</Page>